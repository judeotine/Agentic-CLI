{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plugin Manifest",
  "type": "object",
  "required": ["name", "version", "description", "main", "commands", "permissions"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Plugin name (lowercase, hyphens allowed)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "description": "Plugin description"
    },
    "author": {
      "type": "string",
      "description": "Plugin author"
    },
    "main": {
      "type": "string",
      "description": "Main entry file"
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "aliases": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "hooks": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "pre-command",
          "post-command",
          "pre-edit",
          "post-edit",
          "pre-commit",
          "post-commit"
        ]
      }
    },
    "permissions": {
      "type": "object",
      "properties": {
        "fileSystem": {
          "type": "boolean"
        },
        "git": {
          "type": "boolean"
        },
        "network": {
          "type": "boolean"
        }
      }
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}

